{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@queryleaf/lib": ["packages/lib/src"],
      "@queryleaf/lib/*": ["packages/lib/src/*"],
      "@queryleaf/cli": ["packages/cli/src"],
      "@queryleaf/cli/*": ["packages/cli/src/*"],
      "@queryleaf/server": ["packages/server/src"],
      "@queryleaf/server/*": ["packages/server/src/*"],
      "@queryleaf/postgres-server": ["packages/postgres-server/src"],
      "@queryleaf/postgres-server/*": ["packages/postgres-server/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}